model Banner {
  id         String    @id @default(uuid())
  cafe       Cafe      @relation(fields: [cafeId], references: [id])
  cafeId     String    @db.Uuid
  buttonText String
  link       String
  active     Boolean   @default(false)
  title      String?
  subtitle   String?
  imageUrl   String
  startDate  DateTime?
  endDate    DateTime?
  createdAt  DateTime  @default(now())
}
